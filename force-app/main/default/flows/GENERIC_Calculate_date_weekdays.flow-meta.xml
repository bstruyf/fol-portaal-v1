    <assignments>
        <name>Assign_outputs</name>
        <label>Assign outputs</label>
        <locationX>176</locationX>
        <locationY>158</locationY>
        <assignmentItems>
            <assignToReference>OutputDate</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalculatedDate</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>OutputDateTime</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalculatedDateTime</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <environments>Default</environments>
    <formulas>
        <name>CalculatedDate</name>
        <dataType>Date</dataType>
        <expression>CASE(
MOD({!StartDate} - DATE(1900,1,7),7),
0,{!StartDate} + {!NumberDays} + FLOOR(({!NumberDays}-1)/5)*2,
1,{!StartDate} + {!NumberDays} + FLOOR(({!NumberDays})/5)*2,
2,{!StartDate} + {!NumberDays} + FLOOR(({!NumberDays}+1)/5)*2,
3,{!StartDate} + {!NumberDays} + FLOOR(({!NumberDays}+2)/5)*2,
4,{!StartDate} + {!NumberDays} + FLOOR(({!NumberDays}+3)/5)*2,
5,{!StartDate} + {!NumberDays} + FLOOR(({!NumberDays}+4)/5)*2,
6,{!StartDate} - IF({!NumberDays} &gt;0,1,0) +{!NumberDays}  + CEILING(({!NumberDays})/5)*2,
null)</expression>
    </formulas>
    <formulas>
        <name>CalculatedDateTime</name>
        <dataType>DateTime</dataType>
        <expression>CASE(
MOD({!StartDate} - DATE(1900,1,7),7),
0,{!InputDateTime} + {!NumberDays} + FLOOR(({!NumberDays}-1)/5)*2,
1,{!InputDateTime} + {!NumberDays} + FLOOR(({!NumberDays})/5)*2,
2,{!InputDateTime} + {!NumberDays} + FLOOR(({!NumberDays}+1)/5)*2,
3,{!InputDateTime} + {!NumberDays} + FLOOR(({!NumberDays}+2)/5)*2,
4,{!InputDateTime} + {!NumberDays} + FLOOR(({!NumberDays}+3)/5)*2,
5,{!InputDateTime} + {!NumberDays} + FLOOR(({!NumberDays}+4)/5)*2,
6,{!InputDateTime} - IF({!NumberDays} &gt;0,1,0) +{!NumberDays}  + CEILING(({!NumberDays})/5)*2,
null)</expression>
    </formulas>
    <formulas>
        <name>StartDate</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!InputDateTime})</expression>
    </formulas>
    <interviewLabel>GENERIC Calculate date + weekdays {!$Flow.CurrentDateTime}</interviewLabel>
    <label>GENERIC Calculate date + weekdays</label>
